{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "target": "es6",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "pretty": true,
    "outDir": "dist",
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "@assets/*": [ "src/assets/*" ],
      "@testing/*": [ "src/assets/tests/*" ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}